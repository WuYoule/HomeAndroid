<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/index_gl_item_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pic" />

        <ImageView
         
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/appointment_img" />

       
    </RelativeLayout>
     <LinearLayout
            android:layout_width="0dp"
           android:layout_weight="1"
      
      
            android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
      
            android:orientation="vertical" >

            <TextView
                android:id="@+id/index_gl_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="简短标题显示"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/index_gl_item_titlecontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:text="详细标题	内容"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gray"
                android:textSize="16sp" />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/index_gl_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="120"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/normal_orange_color"
                    />
                <TextView
                    android:id="@+id/index_gl_item_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="123"
                    android:layout_marginLeft="10dp"
                    />
                
                
                
                  
                   
                      <TextView
                    android:id="@+id/index_gl_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="8888"
                 
                    android:layout_marginLeft="10dp"
                    />
                
            </LinearLayout>
            
        </LinearLayout>

</LinearLayout>