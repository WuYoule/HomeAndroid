<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    >

    <RelativeLayout
       
        android:background="@color/normal_orange_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/index_top_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/home_ico_city"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="选择城市"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/index_top_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textColor="#fff"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/normal_space"
            android:text="首页"
            android:textSize="@dimen/title_text_size" />
        <ImageView 
            android:src="@drawable/nav_icon_scan_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
            
            />
        
    </RelativeLayout>

</LinearLayout>