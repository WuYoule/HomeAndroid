<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:padding="@dimen/normal_space"
            android:text="我的"
            android:textSize="@dimen/title_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/my_index_login_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/user_icon" />

            <TextView
                android:id="@+id/my_index_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_index_login_image"
                android:drawableRight="@drawable/arrow_right_my"
                android:paddingLeft="10sp"
                android:text="点击登陆"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="10dp" 
            
            >

            <TextView
                android:id="@+id/my_index_nav_dianping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/collection_icon"
                android:gravity="center"
                android:text="我的点评" />

            <TextView
                android:id="@+id/my_index_nav_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/recent_view"
                android:gravity="center"
                android:text="我的点评" />

            <TextView
                android:id="@+id/my_index_nav_coupon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ticket"
                android:gravity="center"
                android:text="我的点评" />
        </LinearLayout>
        <TextView 
            android:background="#fff"
            android:id="@+id/my_index_item_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" 
            android:text="我的订单"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_right_my"
            android:drawableLeft="@drawable/hair"
            />
        <TextView 
            android:background="#fff"
            android:id="@+id/my_index_item_qianbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_marginTop="1dp" 
            android:text="我的钱包"
           android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_right_my"
            android:drawableLeft="@drawable/dark_life"
            />
        <TextView 
            android:background="#fff"
            android:id="@+id/my_index_item_daidianping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" 
            android:text="待点评"
          
          android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_right_my"
            android:drawableLeft="@drawable/fun"
            />
        <TextView 
            android:background="#fff"
            android:id="@+id/my_index_item_tuijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
            android:text="每日推荐"
           android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_right_my"
            android:drawableLeft="@drawable/fun"
            />
        <TextView 
            android:background="#fff"
            android:id="@+id/my_index_item_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_marginTop="1dp"
            android:text="最近浏览"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_right_my"
            android:drawableLeft="@drawable/hot_pot"
            />
        <TextView 
            android:background="#fff"
            android:id="@+id/my_index_item_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" 
            android:text="设置"
         android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_right_my"
            android:drawableLeft="@drawable/hotel"
            />
        
    </LinearLayout>

</ScrollView>