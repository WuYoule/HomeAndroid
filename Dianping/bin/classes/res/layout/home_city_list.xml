<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
     <RelativeLayout
       
        android:background="@color/normal_orange_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/index_city_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="选择城市"
            android:textColor="@color/white" />

        
        <ImageView 
            android:id="@+id/index_city_flushcity"
            android:src="@drawable/refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:layout_centerVertical="true"
            
            />
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ListView 
        android:id="@+id/city_list"
        android:scrollbars="none"
       android:listSelector="@color/normal_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
        ></ListView>
    <com.wqy.view.SiderBar
        android:id="@+id/city_sider_bar"
        android:layout_width="45dp"
        
         android:layout_height="match_parent"
         android:layout_alignParentRight="true"
        ></com.wqy.view.SiderBar>
</RelativeLayout>
</LinearLayout>
