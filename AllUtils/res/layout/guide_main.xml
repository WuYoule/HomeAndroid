<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:CircleIndicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <LinearLayout 
        android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"        
        >
    <com.youle.allutils.view.circleindicator.widget.CircleIndicator
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
      
        android:id="@+id/guide_vp_indicator"
        CircleIndicator:ci_background="@android:color/white"
        CircleIndicator:ci_selected_background="#1c89f9"
        CircleIndicator:ci_mode="outside"
        CircleIndicator:ci_gravity="center"
        CircleIndicator:ci_radius="5dp"
        CircleIndicator:ci_margin="5dp"
         /></LinearLayout>

</RelativeLayout>