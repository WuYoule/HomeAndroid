<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯"
            android:textColor="#4680d1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F6F6F6"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
           
            android:background="#7F7D7D" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/news_tv_important"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="要闻"
                android:textColor="#4680d1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_tv_newcar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="新车"
                android:textColor="#7E7E7E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_tv_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="导购"
                android:textColor="#7E7E7E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_tv_try"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="试车"
                android:textColor="#7E7E7E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_tv_picture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="图解"
                android:textColor="#7E7E7E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_tv_market"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="行业"
                android:textColor="#7E7E7E"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
           
            android:background="#7F7D7D" />
    </LinearLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/news_vp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       ></android.support.v4.view.ViewPager>

</LinearLayout>