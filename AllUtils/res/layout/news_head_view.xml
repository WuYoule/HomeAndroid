<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/news_head_vp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        ></android.support.v4.view.ViewPager>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#cc666666"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            
            >
            <TextView 
                android:id="@+id/news_head_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C8E7B496"
                android:text="标题1"
                />
            <TextView 
                android:id="@+id/news_head_tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:text="标题2"
                />
            <TextView 
                android:id="@+id/news_head_tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                />
            <TextView 
                android:id="@+id/news_head_tv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                />
            <TextView 
                android:id="@+id/news_head_tv5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                />
            
        </LinearLayout>
        <TextView 
            android:id="@+id/news_head_tv" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            
            />
        
    </FrameLayout>

</FrameLayout>
