<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.youle.allutils.activity.MainActivity" >

    <FrameLayout
        android:id="@+id/car_flyt_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cc000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
       android:background="#f6f6f6"
        android:paddingTop="5dp" >

        <LinearLayout
            android:id="@+id/car_llyt_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_news"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:src="@drawable/zixun" />

            <TextView
                android:id="@+id/car_tv_news"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="资讯"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_llyt_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_find"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:layout_marginBottom="5dp"
                android:src="@drawable/zhaoche" />

            <TextView
                 android:id="@+id/car_tv_find"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="找车"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

       

        <LinearLayout
            android:id="@+id/car_llyt_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_iv_my"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:layout_marginBottom="5dp"
                android:src="@drawable/me" />

            <TextView
                android:id="@+id/car_tv_my"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="我的"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>